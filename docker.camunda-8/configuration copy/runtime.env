# Camunda 8 Platform Configuration

# Component Versions
CAMUNDA_ZEEBE_VERSION=8.7.1
CAMUNDA_OPERATE_VERSION=8.7.1
CAMUNDA_TASKLIST_VERSION=8.7.1
CAMUNDA_OPTIMIZE_VERSION=8.7.0
CAMUNDA_IDENTITY_VERSION=8.7.0
CAMUNDA_CONNECTORS_VERSION=8.7.0
CAMUNDA_WEB_MODELER_VERSION=8.7.0
ELASTIC_VERSION=8.17.4
KEYCLOAK_SERVER_VERSION=24.0.5
POSTGRES_VERSION=14.5-alpine
MAILPIT_VERSION=v1.21.8

# Network Configuration
HOST=localhost
KEYCLOAK_HOST=keycloak

# Authentication Settings
ZEEBE_AUTHENTICATION_MODE=identity
ZEEBE_CLIENT_ID=zeebe
ZEEBE_CLIENT_SECRET=zeebeSecret
RESOURCE_AUTHORIZATIONS_ENABLED=true
MULTI_TENANCY_ENABLED=false

# Memory settings
ZEEBE_MEMORY=1G
ELASTICSEARCH_MEMORY=1G
OPERATE_MEMORY=512m
TASKLIST_MEMORY=512m
OPTIMIZE_MEMORY=1G
WEB_MODELER_MEMORY=512m

# Security
POSTGRES_PASSWORD=CamundaPostgresPassword123
KEYCLOAK_ADMIN_PASSWORD=CamundaKeycloakAdmin123
WEB_MODELER_DB_PASSWORD=WebModelerPassword123
